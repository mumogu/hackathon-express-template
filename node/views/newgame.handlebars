                <input type="text" name="name" class="form-control" id="name-input" placeholder="Kickoff Meeting">
            </div>
            <div class="form-group">
                <label for="words-input">WÃ¶rter (min. 16)</label>
                <textarea name="words" class="form-control" if="words-input" rows="20" placeholder="Bullshit goes here"></textarea>
